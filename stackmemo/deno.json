{
    "compilerOptions": {
      "allowJs": true,
      "lib": ["deno.window"],
      "strict": true
    },
    "lint": {
      "files": {
        "include": ["tests/"]
      },
      "rules": {
        "tags": ["recommended"]
      }
    },
    "fmt": {
      "files": {
        "include": ["tests/"]
      },
      "options": {
        "useTabs": false,
        "lineWidth": 80,
        "indentWidth": 2,
        "singleQuote": true,
        "proseWrap": "always"
      }
    }
  }